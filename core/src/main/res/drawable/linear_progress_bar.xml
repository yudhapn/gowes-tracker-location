<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/linearProgressBarBackground">
        <shape>
            <corners android:radius="@dimen/grid_1" />
            <stroke
                android:width="2dp"
                android:color="#2962FF" />
        </shape>
    </item>

    <item android:id="@+id/linearProgressBarForeground">
        <clip>
            <shape>
                <corners android:radius="@dimen/grid_1" />
                <gradient
                    android:angle="270"
                    android:centerColor="#2962FF"
                    android:centerY="1.0"
                    android:endColor="#06101d"
                    android:startColor="#2962FF" />
            </shape>
        </clip>
    </item>
</layer-list>